location @forward {
    set $redirect_uri "$upstream_http_redirect_uri";
    set $redirect_auth "$upstream_http_redirect_auth";

    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Port $server_port;
    proxy_set_header X-Forwarded-Prefix /sensai;
    proxy_set_header PWN-Trace_ID $request_id;


    proxy_set_header Authorization $redirect_auth;

    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $http_connection;
    proxy_cache_bypass $http_upgrade;

    proxy_buffering off;
    proxy_http_version 1.1;
    proxy_pass $redirect_uri;

    proxy_ignore_headers X-Accel-Redirect;
}

# Netdata monitoring UI exposed at /_netdata
# Trailing slash canonicalization
location = /_netdata {
    return 301 /_netdata/;
}

# Main UI and static assets
location /_netdata/ {
    proxy_redirect off;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Server $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_http_version 1.1;
    proxy_set_header Connection "keep-alive";
    proxy_pass http://netdata:19999/;
    proxy_buffering off;
}

# API / streaming endpoints (captures deeper paths to preserve suffix after /_netdata/)
location ~ ^/_netdata/(.*) {
    proxy_redirect off;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Server $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_http_version 1.1;
    proxy_set_header Connection "keep-alive";
    proxy_pass http://netdata:19999/$1$is_args$args;
    proxy_buffering off;
}
